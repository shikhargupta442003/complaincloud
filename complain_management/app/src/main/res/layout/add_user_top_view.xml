<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_page_activity">

    <ImageButton
                android:id="@+id/edit_user_back_icon"
                android:layout_width="58dp"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:contentDescription="edit_user_back_icon"
                android:src="@drawable/edit_user_back_icon"
                app:layout_constraintBottom_toTopOf="@+id/add_user_top_bar_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.021"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.272" />

            <View
                android:id="@+id/add_user_top_bar_box"
                android:layout_width="415dp"
                android:layout_height="49dp"
                android:background="@drawable/add_user_top_bar_box_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.104" />

            <TextView
                android:id="@+id/add_user_text"
                android:layout_width="138dp"
                android:layout_height="43dp"
                android:text="@string/add_user_text_string"
                android:textColor="@color/add_user_text_color"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/add_user_top_bar_box"
                app:layout_constraintEnd_toEndOf="@+id/add_user_top_bar_box"
                app:layout_constraintStart_toStartOf="@+id/add_user_top_bar_box"
                app:layout_constraintTop_toTopOf="@+id/add_user_top_bar_box" />

</androidx.constraintlayout.widget.ConstraintLayout>